@{
    Layout = "_Layout";
}

@using UniversityRegistrar.Models;

<h2>Departments</h2>
@if (Model.Count == 0)
{
    <h3>No Departments have been added yet!</h3>
}

@foreach (Department department in Model)
{
    <li>@Html.ActionLink($"{ department.Major }", "Details", new { id = department.DepartmentId })</li>
}

<p>@Html.ActionLink("Add new Department", "Create")</p>
<p>@Html.ActionLink("Back to Students List", "Index", "Students")</p>