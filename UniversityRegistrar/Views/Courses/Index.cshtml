@{
    Layout = "_Layout";
}

@using UniversityRegistrar.Models;
@model List<UniversityRegistrar.Models.Course>;

<h2>Courses</h2>

@if (Model.Count == 0)
{
    <h3>No Courses have been added yet!</h3>
}

@foreach (Course course in Model)
{
    <li>
        @Html.ActionLink($"{ course.CourseName }", "Details", new { id = course.CourseId })
    </li>
    <p class="courseIndexP">Name: @course.CourseName</p>
    <p class="courseIndexP">Number: @course.CourseNumber</p>
}

<p>@Html.ActionLink("Add new Course", "Create")</p>
<p>@Html.ActionLink("Back to Students", "Index", "Students")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
