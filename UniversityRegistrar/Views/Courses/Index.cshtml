@{
    Layout = "_Layout";
}

@using ToDoList.Models;
@model List<ToDoList.Models.Item>;

<h2>Items</h2>

@if (Model.Count == 0)
{
    <h3>No Items have been added yet!</h3>
}

@foreach (Item item in Model)
{
    <li>
        @Html.ActionLink($"{ item.Description }", "Details", new { id = item.ItemId })
    </li>
    <p class="itemIndexP">Description: @item.Description</p>
    <p class="itemIndexP">Date: @item.Date</p>
}

<p>@Html.ActionLink("Add new Item", "Create")</p>
<p>@Html.ActionLink("Back to Categories", "Index", "Categories")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
